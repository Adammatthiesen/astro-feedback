---
import { AdminUsers, db, eq } from 'astro:db';
import Layout from '../../layouts/Layout.astro';
import { verifyPassword } from '../../lib/utils';

// Handle login form submission
if (Astro.request.method === 'POST') {
	try {
		const formData = await Astro.request.formData();
		const email = formData.get('email') as string;
		const password = formData.get('password') as string;

		const user = await db.select().from(AdminUsers).where(eq(AdminUsers.email, email)).get();

		// Simple authentication - in production, use proper password hashing
		if (user && (await verifyPassword(password, user.password))) {
			// Create a simple session
			const sessionData = {
				adminId: user.id,
				email: user.email,
				loginTime: Date.now(),
			};

			Astro.cookies.set('admin-session', JSON.stringify(sessionData), {
				httpOnly: true,
				secure: false, // Set to true in production with HTTPS
				sameSite: 'strict',
				maxAge: 60 * 60 * 24 * 7, // 7 days
			});

			return Astro.redirect('/admin');
		}
		// Invalid credentials
		return new Response('Invalid credentials', { status: 401 });
	} catch (error) {
		console.error('Login error:', error);
		return new Response('Login failed', { status: 500 });
	}
}

// Check if already logged in
const sessionCookie = Astro.cookies.get('admin-session');
if (sessionCookie) {
	return Astro.redirect('/admin');
}
---

<Layout title="Admin Login - Feedback API">
